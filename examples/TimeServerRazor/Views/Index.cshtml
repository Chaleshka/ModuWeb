@using ModuWeb.Extensions
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Model.Title</title>
    <style>
        body { font-family: system-ui, sans-serif; margin: 2rem; background: #1a1a2e; color: #eee; }
        .box { background: #16213e; padding: 1.5rem; border-radius: 12px; max-width: 400px; }
        h1 { margin-top: 0; font-size: 1.25rem; }
        .time { font-size: 2rem; font-weight: bold; color: #0f4; font-family: monospace; }
        .hint { font-size: 0.85rem; color: #888; margin-top: 1rem; }
        .status { font-size: 0.75rem; margin-top: 0.5rem; }
        .status.ok { color: #0a0; }
        .status.err { color: #a00; }
    </style>
</head>
<body>
<div class="box">
    <h1>@Model.Title</h1>
    <p>Обновляется каждую секунду (Server-Sent Events):</p>
    <p class="time" id="serverTime">@Model.InitialTime</p>
    <p class="hint" id="lastUpdate">Загружено: @Model.InitialDate</p>
    <p class="status" id="sseStatus">Подключение...</p>
</div>

@(Sse.Stream("time-stream")
    .Bind("#serverTime", "time")
    .Bind("#lastUpdate", "datetime", "Обновлено: {0}")
    .OnOpen("document.getElementById('sseStatus').textContent='SSE подключён';document.getElementById('sseStatus').className='status ok'")
    .OnError("document.getElementById('sseStatus').textContent='Переподключение...';document.getElementById('sseStatus').className='status err'")
    .Render())
</body>
</html>